rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any logged-in user to read gigs and events
    match /gigs/{gigId} {
      allow read: if request.auth != null;
      // Allow organizers to create gigs
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'organizer';
    }
    
    match /events/{eventId} {
      allow read: if request.auth != null;
      // Allow organizers to create events
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'organizer';
    }

    // Allow users to read and write to their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}